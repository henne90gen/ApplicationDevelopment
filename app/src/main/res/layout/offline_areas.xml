<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/offlineAreasButtonContainer"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/offlineAreasContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/offlineAreasButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnDeleteOfflineAreas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Delete Selected Areas" />

        <Button
            android:id="@+id/btnAddOfflineArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Area" />
    </LinearLayout>
</RelativeLayout>